<table data-bind="visible: $root.currentViewMode() == 'Grid Edit'">
    <thead>
        <tr data-bind="foreach: fields">
            <th data-bind="text: name"></th>
        </tr>
    </thead>
    <tbody data-bind='foreach: $root.results'>
        <tr data-bind="foreach: $parent.fields">
            <td>
              <input data-bind='value: $parent.values[$data.code], attrs:{name: $data.code}'/>
            </td>
        </tr>
    </tbody>
</table>