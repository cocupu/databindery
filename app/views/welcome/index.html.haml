      %br
      = f.email_field :email, :placeholder=>"E-Mail", :class=>'', :autocomplete=>'off' 
      %br
      = f.password_field :password, :placeholder=>"Password", :class=>'' 
      %br
      %br
      %button.btn.large.btn-primary{:type=>"submit"} Sign Up

