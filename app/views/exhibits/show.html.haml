-content_for :page_name do
  #{@exhibit.title }

-content_for :subtitle do
  =link_to "edit", edit_identity_pool_exhibit_path(@identity, @pool, @exhibit), :class=>'btn btn-small'

=form_for :search, :url=>identity_pool_exhibit_path(@identity, @pool, @exhibit), :method=>:get, :html=>{:id=>'search', :class=>'form-inline'} do
  =text_field_tag :q, params[:q]
  -facet_params.each do |key, value|
    =hidden_field_tag "f[#{key}]", value
  =submit_tag "Search", :class=>'btn btn-primary'

-if @results
  #facets.span4
    %h2 Limit your search:
    %ul.accordion#accordion2
      -@exhibit.facets.each do |facet_key|
        %li.accordion-group
          %h3.accordion-heading
            %a.accordion-toggle{'data-toggle'=>"collapse", 'data-parent'=>"#accordion2", 'href'=>"#collapse_#{facet_key}"}
              =@exhibit.pool.all_fields.find{ |f| f[:code] == facet_key}[:name]
          = render_facet_list(Node.solr_name(facet_key, 'facet'), @facet_fields[Node.solr_name(facet_key, 'facet')], "collapse_#{facet_key}")
  .results.span8
    %h2 Found #{pluralize(@total, 'result')}
    %ul.exhibits
      -@results.each do |result|
        %li= render :partial=>'item', :locals=>{:item=>result}
    - if paginate_params(@response).num_pages > 1 
      .pagination
        = paginate_rsolr_response @response, :outer_window => 2 
