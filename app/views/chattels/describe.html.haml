:javascript
  /*poll the log controller for result of @log.id*/
  /*if status == 'SUCCESS' then go to spreadsheets/@chattel.id/mapping_template/new */
  function poll(){
      $.ajax({ url: "#{job_log_item_path(@log)}", success: function(data){
        //Update your dashboard gauge
        $('#results').html("Status: " + data.job_log_item.status); 
        if (data.status == 'SUCCESS') {
          document.location = '#{spreadsheet_worksheets_path(:spreadsheet_id=>@chattel.id)}'
        } else {
          //Setup the next poll
          setTimeout(function(){
           poll();
          }, 1000);
        }
      }, dataType: "json"});
  }
  poll();
  
