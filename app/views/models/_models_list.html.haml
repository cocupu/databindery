.subnav.subnav-fixed
  %ul.models.nav.nav-pills.nav-stacked
    -@models.limit(20).each do |m|
      %li{:class=> (@model && m.id == @model.id) || (@node && m.id == @node.model_id) ? 'active dropdown' : 'dropdown', :id=>"menu#{m.id}"}
        =link_to "#menu#{m.id}", 'data-toggle'=> 'dropdown', :class=> 'dropdown-toggle' do
          =m.name
          %b.caret
        %ul.dropdown-menu
          %li
            =link_to "Search", model_nodes_path(m)
          %li
            =link_to "Input and output formats", '#', :style=>"color: pink"
          %li
            =link_to "Metadata & Associations", edit_model_path(m)
          %li
            =link_to "Create New", new_model_node_path(m)

    %li=link_to "New Type of Entity", new_model_path

